<div class="depot_form">
	<% if flash[:alert] %>
	  <p id="notice"><%= flash[:alert] %></p>
	<% end %>

	<%= form_tag do %>
	  <fieldset>
	  	<legend class="login_site"><p>ログインしてください</p></legend>

	  	<div class="login_form">
	  		<%= label_tag :name, '名前：' %>
	  		<%= text_field_tag :name, params[:name] %>
	  	</div>
	  	<div class="login_form">
	  		<%= label_tag :password, 'パスワード：' %>
	  		<%= password_field_tag :password, params[:password] %>
	  	</div>
	  	<div class="login_form">
	  		<div style="margin:1em 3em; float:left"></div>
	  		<%= submit_tag "ログイン" %>
	  	</div>
	  	<div class="login_fogot"><%= button_to "パスワード忘れてしまった方...", new_password_reset_path %></div>
	  </fieldset>
	<% end %>
</div>