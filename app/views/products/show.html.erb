<div class="p_show_box">
<% breadcrumb :product, @product %>

<div class="p_show_title">
  <div class="p_show_title_left">商品名:
  <div class="p_show_title_right"><%= @product.title %></div></div>
</div>


<div class="p_show_img">
	<% if @product.image_url.empty? %>
		<%= image_tag("no_image.png") %>

	<% else %>
		<%= image_tag(@product.image_url) %>
	<% end %>	
</div>
<div class="p_show_right_box">
	<div>
		商品名:
		<%= @product.title %>
	</div>
	<div class="p_show_description">
	  商品説明:
	  <%= @product.description %>
	</div>
	<div class="p_show_price">
	  <div class="p_show_price_left">値段:</div>
	  <div class="p_show_price_right"><%= number_to_currency(@product.price, :locale => 'jp') %></div>
	</div>

	<div class="p_show_c_name">
		カテゴリー:
		<%= @product.category.c_name %>
	</div>

	<div class="store_cart_in store_button">
		<%= link_to image_tag('cart_in.png', :size => "120x50"), line_items_path(product_id: @product), remote: true ,method: :post %>
	</div>
	<div class="store_button" style="margin-left: 10px;">
		<% unless session[:user_id].nil? %>
		<% if @product.favorited_by? current_user %>
              <%= link_to image_tag('no_fav.png', :size => "120x50"), product_favorites_path(@product), method: :delete %>
        <% else %>
              <%= link_to image_tag('add_fav.png', :size => "120x50"), product_favorites_path(@product), method: :post %>
        <% end %>
        <% end %>
	</div>
</div>
<%#= link_to 'Edit', edit_product_path(@product) %>
<%#= link_to 'Back', store_path %>
</div>