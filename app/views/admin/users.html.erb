<div class="admin_users">
<div class="admin_title">ユーザー一覧<div class="admin_mini2">登録数：<%= @users.count %> 人</div></div>

<div class="admin_serch">
	<%= form_tag(admin_users_path, method: "get") do %>
        <%#= label_tag :title, "商品検索" %>
        <%= text_field_tag :name, params[:name], :size => "37" %>
        <%= submit_tag "検索" %>
    <% end %>
</div>

<table class="admin_table" border="1">
	<thead>
		<tr>
			<th>ユーザー名</th>
			<th>登録メールアドレス</th>
			<th>登録日</th>
			<th>最終更新日</th>
			<th>注文数</th>
			<th>id</th>
			<th>編集</th>
		</tr>
	</thead>
	<tbody>
  <% @users.each do |user| %>
		<tr>
			<td><%= user.name %></td>
			<td><%= user.email %></td>
			<td><%= user.created_at.strftime('%Y/%m/%d %H:%M') %></td>
			<td><%= user.updated_at.strftime('%Y/%m/%d %H:%M') %>
				</td>
			<td><%= user.orders.count %></td>
			<td><%= user.id %></td>
			<td><%= link_to '編集', edit_user_path(user) %><br>
				<%= link_to '削除', user, data: {confirm: 'このユーザーを削除してよろしいですか？'}, method: :delete %></td>
		</tr>
	</tbody>
  <% end %>
</table>
</div>