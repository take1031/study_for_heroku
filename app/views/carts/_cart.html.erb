<table>
	<%= render(cart.line_items) %>

	<tr class="total_line">
		<td colspan="2">合計</td>
		<td><%= @cart.total_count %> 点 </td>
		<td class="total_cell"><%= number_to_currency( @cart.total_price, :locale => 'jp') %></td>
